<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
             tools:context="com.zhongbang.huabei.fragment.dialog.GroupImageFragment">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手持身份证和银行卡"
                android:textSize="@dimen/dimen20"
                android:layout_margin="20dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_group"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="拍摄时保持周围环境光线充足，\n能看清证件上的签字。"
                android:textColor="@color/colorAccent"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="我知道了"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen20"
                android:background="@drawable/shape_corners_blue"/>
</LinearLayout>
