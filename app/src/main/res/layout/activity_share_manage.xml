<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhongbang.huabei.app.ShareManageActivity">
    <include
        android:id="@+id/toptitle"
        layout="@layout/top_title_item"></include>
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toptitle">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="32dp"
            android:gravity="center_vertical"
            android:text="支持朋友圈招募代理,铺设自己的连锁分店,分店越多,赚钱越多！" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignLeft="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="16dp"
            android:background="@drawable/circle_op"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:text="分店可以一键复制你店铺所有到他的店铺。"
            android:textColor="#888888"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/textView5"
            android:background="@drawable/circle_op"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/TextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TextView1"
            android:layout_alignBottom="@+id/TextView1"
            android:layout_alignLeft="@+id/textView5"
            android:text="分店既是分销又是一家独立微店,可以上传自己商品。"
            android:textColor="#888888"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView1"
            android:layout_below="@+id/TextView1"
            android:layout_marginTop="17dp"
            android:text="为你带来终身收益："
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/TextView3"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/TextView2"
            android:background="@drawable/circle_op"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TextView3"
            android:layout_alignBottom="@+id/TextView3"
            android:layout_alignLeft="@+id/TextView2"
            android:text="分店交易额的流水利润"
            android:textColor="#888888"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/TextView05"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/TextView3"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/TextView04"
            android:background="@drawable/circle_op"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/TextView06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TextView05"
            android:layout_alignBottom="@+id/TextView05"
            android:layout_alignLeft="@+id/TextView04"
            android:text="分店升级的利润"
            android:textColor="#888888"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/TextView07"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/TextView05"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/TextView06"
            android:background="@drawable/circle_op"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/TextView08"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/TextView07"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/TextView06"
            android:background="@drawable/circle_op"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/TextView09"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignLeft="@+id/TextView08"
            android:layout_below="@+id/TextView08"
            android:layout_marginTop="5dp"
            android:background="@drawable/circle_op"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/TextView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TextView07"
            android:layout_alignBottom="@+id/TextView07"
            android:layout_alignLeft="@+id/TextView06"
            android:text="分店分销品牌商品的利润"
            android:textColor="#888888"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/TextView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TextView08"
            android:layout_alignBottom="@+id/TextView08"
            android:layout_alignLeft="@+id/TextView10"
            android:text="分店无限裂变的利润"
            android:textColor="#888888"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/TextView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TextView09"
            android:layout_alignBottom="@+id/TextView09"
            android:layout_alignLeft="@+id/TextView11"
            android:text="分店即是一个宝贵的创业机会"
            android:textColor="#888888"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView09"
            android:layout_below="@+id/TextView09"
            android:layout_marginTop="16dp"
            android:text="开通方法"
            android:textColor="#3cb371" />

        <TextView
            android:id="@+id/TextView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView7"
            android:layout_below="@+id/textView7"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="点击开通分店,把开通邀请通过微信,QQ,微博等方式发给你的朋友,注册成功,下载APP后即可成为你的分店,与你共创辉煌!"
            android:textColor="#888888"
            android:textSize="13dp" />

        <Button
            android:id="@+id/btn_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/shape_corners_green"
            android:text="分享邀请"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>
</RelativeLayout>
