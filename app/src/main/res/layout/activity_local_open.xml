<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhongbang.huabei.app.LocalOpenActivity">
    <include layout="@layout/top_title_item"></include>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="替好友开通后，系统默认关联到你名下"
        android:padding="10dp"
        android:textColor="@color/orange"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/include"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <LinearLayout
            style="@style/linearLayout">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:src="@drawable/ic_phone_android_blue_24dp"/>
            <EditText
                android:id="@+id/et_account"
                style="@style/editText_login"
                android:hint="请输入账号"/>
        </LinearLayout>
        <View
            style="@style/view_line"></View>
        <LinearLayout
            style="@style/linearLayout">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:visibility="invisible"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3">
                <EditText
                    android:id="@+id/et_code"
                    style="@style/editText_login"
                    android:hint="请输入验证码"/>
                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="获取验证码"
                    android:textColor="@color/blue"
                    android:layout_weight="1.5"/>
            </LinearLayout>
        </LinearLayout>
        <View
            style="@style/view_line"></View>
        <LinearLayout
            style="@style/linearLayout">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:src="@drawable/ic_lock_outline_black_24dp"/>
            <EditText
                android:id="@+id/et_password1"
                style="@style/editText_login"
                android:inputType="textPassword"
                android:hint="请设置密码"/>
        </LinearLayout>
        <View
            style="@style/view_line"></View>
        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_land"
            android:text="注册"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
