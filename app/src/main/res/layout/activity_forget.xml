<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhongbang.huabei.app.ForgetActivity">
    <include
        android:id="@+id/include"
        layout="@layout/top_title_item"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <LinearLayout
            style="@style/linearLayout">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:src="@drawable/ic_phone_android_blue_24dp"/>
            <EditText
                android:id="@+id/et_account"
                style="@style/editText_login"
                android:hint="请输入账号"/>
        </LinearLayout>
        <View
            style="@style/view_line"></View>
        <LinearLayout
            style="@style/linearLayout">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:visibility="invisible"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3">
                <EditText
                    android:id="@+id/et_code"
                    style="@style/editText_login"
                    android:hint="请输入验证码"/>
                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="获取验证码"
                    android:textColor="@color/blue"
                    android:layout_weight="1.5"/>
            </LinearLayout>
        </LinearLayout>
        <View
            style="@style/view_line"></View>
        <LinearLayout
            style="@style/linearLayout">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:src="@drawable/ic_lock_outline_black_24dp"/>
            <EditText
                android:id="@+id/et_password1"
                style="@style/editText_login"
                android:inputType="textPassword"
                android:hint="请设置6-18位密码"/>
        </LinearLayout>
        <View
            style="@style/view_line"></View>
        <LinearLayout
            style="@style/linearLayout">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"/>
            <EditText
                android:id="@+id/et_password2"
                style="@style/editText_login"
                android:inputType="textPassword"
                android:hint="请再次确认密码"/>
        </LinearLayout>
        <View
            style="@style/view_line"></View>
        <Button
            android:id="@+id/btn_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_land"
            android:text="完成"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_land"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="账号登录"
            android:textColor="@color/blue"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_low"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="没有账号？"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="注册"/>
    </LinearLayout>
</RelativeLayout>
